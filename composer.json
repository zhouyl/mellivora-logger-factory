{
    "name": "mellivora/logger-factory",
    "type": "library",
    "description": "Logger factory component of mellivora framework",
    "keywords": [
        "framework",
        "mellivora",
        "logger",
        "logger-factory",
        "monolog",
        "psr-log"
    ],
    "homepage": "https://github.com/zhouyl/mellivora-logger-factory",
    "license": "MIT",
    "authors": [
        {
            "name": "zhouyl",
            "email": "81438567@qq.com"
        }
    ],
    "require": {
        "php": ">=5.6.0",
        "monolog/monolog": "~1.23",
        "psr/log": "~1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "~2",
        "hassankhan/config": "^2.0",
        "phpunit/phpunit": "~5.0",
        "swiftmailer/swiftmailer": "~5.4.9",
        "symfony/yaml": "~3.4"
    },
    "autoload": {
        "psr-4": {
            "Mellivora\\Logger\\": "src"
        },
        "files": []
    },
    "autoload-dev": {
        "psr-4": {
            "Mellivora\\Logger\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "secure-http": false
    },
    "scripts": {
        "test": "./vendor/bin/phpunit;",
        "phpcs": "./vendor/bin/php-cs-fixer fix -v --diff --dry-run;",
        "phpcs-fix": "./vendor/bin/php-cs-fixer fix -v;"
    }
}
